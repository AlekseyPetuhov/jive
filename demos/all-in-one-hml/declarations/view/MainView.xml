<?xml version="1.0" encoding="UTF-8"?>
<JWindow xmlns="org.aswing"
         xmlns:haxe="http://haxe.org/"
         xmlns:geom="org.aswing.geom"
         xmlns:border="org.aswing.border"
         xmlns:e="empty"
         xmlns:ext="org.aswing.ext"
         defaultButton="defButton">
    <haxe:Implements><![CDATA[jive.DataContextControllable<viewmodel.MainViewModel>]]></haxe:Implements>
    <content>
        <JPanel>
            <layout>
                <BorderLayout hgap="20"/>
            </layout>
            <JPanel constraints="org.aswing.BorderLayout.WEST">
                <layout>
                    <CenterLayout/>
                </layout>
                <JList
                        model="{Binding menuListModel mode=oneway}"
                        selectedIndex="{Binding menuSelectedIndex mode=twoway}">
                    <background>
                        <ASColor rgb="0xe1e1e1"/>
                    </background>
                    <selectionBackground>
                        <ASColor rgb="0x34495e"/>
                    </selectionBackground>
                    <preferredSize>
                        <geom:IntDimension width="200" height="-1"/>
                    </preferredSize>
                </JList>
            </JPanel>
            <JPanel constraints="org.aswing.BorderLayout.CENTER">
                <layout>
                    <CenterLayout/>
                </layout>
                <SoftBox>
                    <SoftBox gap="10">
                        <JLabel text="'Basic buttons'" horizontalAlignment="org.aswing.AsWingConstants.LEFT">
                            <font>
                                <ASFont name="'assets/Lato-Bold.ttf'" size="20"/>
                            </font>
                        </JLabel>
                        <SoftBox axis="org.aswing.SoftBoxLayout.X_AXIS" gap="30">
                        <SoftBox>
                            <border>
                                <border:LineBorder thickness="1" round="5">
                                    <border:interior>
                                        <border:EmptyBorder top="30" left="30" bottom="30" right="30"/>
                                    </border:interior>
                                    <border:color>
                                        <ASColor rgb="0xe1e1e1"/>
                                    </border:color>
                                </border:LineBorder>
                            </border>

                            <JLabel text="'Basic buttons'" horizontalAlignment="org.aswing.AsWingConstants.LEFT"/>
                            <JPanel>
                                <JButton id="defButton" text="'Default button'" command="{Binding defaultButtonCommand}"/>
                                <JButton text="'Button'" command="{Binding basicButtonCommand}"/>
                            </JPanel>

                            <JSpacer><preferredSize> <geom:IntDimension width="10" height="10"/> </preferredSize></JSpacer>

                            <JLabel text="'Disabled button'" horizontalAlignment="org.aswing.AsWingConstants.LEFT"/>
                            <JPanel>
                                <JButton text="'Disabled button'" enabled="false"/>
                            </JPanel>

                            <JSpacer><preferredSize> <geom:IntDimension width="10" height="10"/> </preferredSize></JSpacer>

                            <JLabel text="'Buttons with icons'" horizontalAlignment="org.aswing.AsWingConstants.LEFT"/>
                            <JPanel>
                                <JButton text="'Messages'" command="{Binding messagesButtonCommand}">
                                    <icon>
                                        <AssetIcon bitmapAsset="'messages.png'" width="30" height="30" scale="true"/>
                                    </icon>
                                </JButton>
                                <JButton text="'Wheather in Abakan'" command="{Binding weatherButtonCommand}">
                                    <icon>
                                        <AssetIcon bitmapAsset="'weather.png'" width="30" height="30" scale="true"/>
                                    </icon>
                                </JButton>
                                <JButton command="{Binding calendarButtonCommand}">
                                    <icon>
                                        <AssetIcon bitmapAsset="'calendar.png'" width="30" height="30" scale="true"/>
                                    </icon>
                                </JButton>
                            </JPanel>
                        </SoftBox>
                        <JTextArea editable="false" text="{Binding buttonsLog mode=oneway}">
                            <preferredSize>
                                <geom:IntDimension width="300" height="0"/>
                            </preferredSize>
                        </JTextArea>
                    </SoftBox>>
                    </SoftBox>
                    <SoftBox gap="10">
                        <JLabel text="'Text'" horizontalAlignment="org.aswing.AsWingConstants.LEFT">
                            <font>
                                <ASFont name="'assets/Lato-Bold.ttf'" size="20"/>
                            </font>
                        </JLabel>
                        <SoftBox axis="org.aswing.SoftBoxLayout.X_AXIS" gap="30">
                            <SoftBox>
                                <border>
                                    <border:LineBorder thickness="1" round="5">
                                        <border:interior>
                                            <border:EmptyBorder top="30" left="30" bottom="30" right="30"/>
                                        </border:interior>
                                        <border:color>
                                            <ASColor rgb="0xe1e1e1"/>
                                        </border:color>
                                    </border:LineBorder>
                                </border>

                                <JPanel>
                                    <JLabel text="'Predator'" horizontalAlignment="org.aswing.AsWingConstants.LEFT">
                                        <preferredSize>
                                            <geom:IntDimension width="100" height="-1"/>
                                        </preferredSize>
                                    </JLabel>
                                    <JTextField columns="15" inlineHint="'Lion'" text="{Binding predator mode=twoway}"/>
                                </JPanel>

                                <JPanel>
                                    <JLabel text="'Victim'" horizontalAlignment="org.aswing.AsWingConstants.LEFT">
                                        <preferredSize>
                                            <geom:IntDimension width="100" height="-1"/>
                                        </preferredSize>
                                    </JLabel>
                                    <JTextField columns="15" inlineHint="'Antelope'" text="{Binding victim mode=twoway}"/>
                                </JPanel>

                            </SoftBox>
                            <ext:MultilineLabel text="{Binding predatorVictimSentence mode=oneway}" rows="5" columns="20" >
                                <ext:font>
                                    <ASFont name="'assets/Lato-Bold.ttf'" size="20"/>
                                </ext:font>
                            </ext:MultilineLabel>
                        </SoftBox>
                        </SoftBox>
                </SoftBox>
            </JPanel>
        </JPanel>
    </content>
</JWindow>